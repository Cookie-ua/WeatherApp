@model IEnumerable<WeatherApp.ViewModels.CityForecastViewModel>
@{
    ViewData["Title"] = "Search";
}
<div class="row justify-content-center">
    <div class="col-md-7 text-center">
        <h3>Weather in your city</h3>
        <form asp-controller="Forecast" asp-action="Search" method="get">
            <div class="input-group">
                <input type="search" name="city" class="form-control" />
                <span class="input-group-append">
                    <button type="submit" class="btn btn-outline-secondary">
                        Search
                    </button>
                </span>
            </div>
        </form>
    </div>
</div>
<br />
<div class="row justify-content-center">
    <div class="col-md-7">
        @{
            if (Model != null)
            {
                foreach (var item in Model)
                {
                    <partial name="_CitySearch" model="item" />
                }
            }
            if (ViewBag.City != null && Model.Count() == 0)
            {
                <div class="text-center">
                    City with name "@ViewBag.City" not found
                </div>
            }
        }
    </div>
</div>